// .vscode/launch.json
{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch ejecutable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ejecutable",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "postDebugTask": "link"
        }
    ]
}
